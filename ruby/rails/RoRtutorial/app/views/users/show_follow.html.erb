<% provide(:title, @title) %>

<div class="row">

  <aside class="col-md-4">
    <div class="user_info">
      <h1>
        <%= gravatar_for( @user, size: 60) %>
        <%= @user.name %>
      </h1>

    </div>
    <section class="stats">
      <%= render "shared/stats" %>
      <% if @users.any? %>
      <div class="user_avatars">
        <% @users.each do |user| %>
          <%= link_to gravatar_for(user, size: 30), user %>
        <% end %>
      </div>
      <% end %>
    </section>
  </aside>

  <section class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="user follow">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </section>

</div>

